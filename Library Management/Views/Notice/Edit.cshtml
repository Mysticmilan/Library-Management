@model Notice
@{
}
<div class="d-flex justify-content-between">
    <h2>Edit Notice</h2>
    <a asp-action="Index" class="btn btn-secondary">Go Back</a>
</div>
<hr />
<div class="container mt-4">
    <div class="row">
        <div class="col-6">

            <form asp-action="Edit" method="POST">
                <input hidden name="id" value="@(Model.Id)">
                <div class="row">
                    <div class="col-2">
                        <label>Title</label>
                    </div>
                    <div class="col-10">
                        <input class="form-control" value="@(Model.Title)" name="Title">
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-2">
                        <label>Valid From</label>
                    </div>
                    <div class="col-10">
                        <input class="form-control" value="@(Model.ValidFrom)" name="ValidFrom">
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-2">
                        <label>Valid until</label>
                    </div>
                    <div class="col-10">
                        <input class="form-control" value="@(Model.ValidUntil)" name="ValidUntil">
                    </div>
                </div>

                <div class="col-2">
                    <label>Details:</label>
                </div>
                <div class="col-10">
                    <textarea id="editor" class="form-control" name="Details">@(Model.Details)</textarea>
                </div>

                <div class="row mt-3">
                    <div class="col-2">
                    </div>
                    <div class="col-10">
                        <button type="submit" class="btn btn-success">Submit</button>

                    </div>
                </div>
            </form>

        </div>
    </div>
</div>


<script>
    ClassicEditor
        .create(document.querySelector('#editor'))
        .catch(error => {
            console.error(error);
        });
</script>