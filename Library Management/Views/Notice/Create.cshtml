@{
}
<div class="d-flex justify-content-between">
    <h2>Add Notification</h2>
    <a asp-action="Index" class="btn btn-secondary">Go Back</a>
</div>
<hr />
<div class="container mt-4">
    <div class="row">
        <div class="col-6">
            <form asp-action="Create" method="POST">
                <div class="row">
                    <div class="col-2">
                        <label>Title</label>
                    </div>
                    <div class="col-10">
                        <input class="form-control" name="Title">
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-2">
                        <label>Valid From</label>
                    </div>
                    <div class="col-10">
                        <input type="datetime-local" class="form-control" name="ValidFrom">
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-2">
                        <label>Valid Until</label>
                    </div>
                    <div class="col-10">
                        <input type="datetime-local" class="form-control" name="ValidUntil">
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-2">
                        <label>Details:</label>
                    </div>
                    <div class="col-10">
                        <textarea id="editor" class="form-control" name="Details"> </textarea>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-2">
                    </div>
                    <div class="col-10">
                        <button type="submit" class="btn btn-success">Submit</button>

                    </div>
                </div>
            </form>
        </div>
    </div>

</div>

<script>
    ClassicEditor
        .create(document.querySelector('#editor'))
        .catch(error => {
            console.error(error);
        });
</script>